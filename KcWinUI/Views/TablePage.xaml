<Page
    x:Class="KcWinUI.Views.TablePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    KeyDown="Page_KeyDown"
    KeyUp="Page_KeyUp"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <AppBarButton
                    Height="60"
                    Click="Button_Click_jietu"
                    Label="分享">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xF406;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <ComboBox
                    x:Name="zhoubox"
                    Margin="16,0,0,0"
                    VerticalAlignment="Center"
                    SelectionChanged="zhoubox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

        </Grid>
        <ScrollViewer
            x:Name="scrollViewer"
            Grid.Row="1"
            Padding="13,13,13,16"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <Grid x:Name="ContentGrid">

                <Grid.RenderTransform>
                    <CompositeTransform x:Name="ContentTransform" />
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Column="0"
                        Width="90"
                        Margin="0,3,0,18">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            Text="{x:Bind Day}" />
                        <TextBlock
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Text="Day" />
                    </Grid>
                    <GridView
                        x:Name="TableGridHeader"
                        Grid.Column="1"
                        IsHitTestVisible="False"
                        ItemTemplate="{StaticResource ItemTableHeader}" />
                </Grid>

                <Grid x:Name="GridTable" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <GridView
                        x:Name="TableGridLeft"
                        Grid.Column="0"
                        IsHitTestVisible="False"
                        ItemTemplate="{StaticResource ItemTableLeft}">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid
                                    x:Name="MaxItemsWrapGrid"
                                    MaximumRowsOrColumns="1"
                                    Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                    <GridView
                        Grid.Column="1"
                        IsItemClickEnabled="True"
                        ItemClick="TableGrid_ItemClick"
                        ItemTemplate="{StaticResource ItemTable}"
                        SelectionChanged="TableGrid_SelectionChanged"
                        SelectionMode="None">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!--  改成 StackPanel 实现可变高度  -->
                                <ItemsStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                    <GridView
                        Grid.Column="2"
                        IsItemClickEnabled="True"
                        ItemClick="TableGrid_ItemClick"
                        ItemTemplate="{StaticResource ItemTable}"
                        SelectionChanged="TableGrid_SelectionChanged"
                        SelectionMode="None">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!--  改成 StackPanel 实现可变高度  -->
                                <ItemsStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                    <GridView
                        Grid.Column="3"
                        IsItemClickEnabled="True"
                        ItemClick="TableGrid_ItemClick"
                        ItemTemplate="{StaticResource ItemTable}"
                        SelectionChanged="TableGrid_SelectionChanged"
                        SelectionMode="None">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!--  改成 StackPanel 实现可变高度  -->
                                <ItemsStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                    <GridView
                        Grid.Column="4"
                        IsItemClickEnabled="True"
                        ItemClick="TableGrid_ItemClick"
                        ItemTemplate="{StaticResource ItemTable}"
                        SelectionChanged="TableGrid_SelectionChanged"
                        SelectionMode="None">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!--  改成 StackPanel 实现可变高度  -->
                                <ItemsStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                    <GridView
                        Grid.Column="5"
                        IsItemClickEnabled="True"
                        ItemClick="TableGrid_ItemClick"
                        ItemTemplate="{StaticResource ItemTable}"
                        SelectionChanged="TableGrid_SelectionChanged"
                        SelectionMode="None">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!--  改成 StackPanel 实现可变高度  -->
                                <ItemsStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                    <GridView
                        Grid.Column="6"
                        IsItemClickEnabled="True"
                        ItemClick="TableGrid_ItemClick"
                        ItemTemplate="{StaticResource ItemTable}"
                        SelectionChanged="TableGrid_SelectionChanged"
                        SelectionMode="None">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!--  改成 StackPanel 实现可变高度  -->
                                <ItemsStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                    <GridView
                        Grid.Column="7"
                        IsItemClickEnabled="True"
                        ItemClick="TableGrid_ItemClick"
                        ItemTemplate="{StaticResource ItemTable}"
                        SelectionChanged="TableGrid_SelectionChanged"
                        SelectionMode="None">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!--  改成 StackPanel 实现可变高度  -->
                                <ItemsStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
