<Page
    x:Class="KcWinUI.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource PageTitleStyle}"
            Text="导入数据" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBox
                x:Name="account"
                VerticalAlignment="Center"
                PlaceholderText="账号" />
            <PasswordBox
                x:Name="password"
                Margin="0,9,0,0"
                VerticalAlignment="Center"
                PlaceholderText="密码" />
            <Grid Grid.Row="3" Margin="6,16,16,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <CheckBox
                    x:Name="checkbox"
                    Grid.Row="2"
                    VerticalAlignment="Bottom">
                    <CheckBox.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="请阅读" />
                            <HyperlinkButton
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="《软件协议》"
                                NavigateUri="https://muqingcandy.top/UserAgreement.html" />
                            <TextBlock VerticalAlignment="Center" Text="与" />
                            <HyperlinkButton
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="《隐私政策》"
                                NavigateUri="https://muqingcandy.top/UserAgreement.html#yiyoubiao_privacy_policy" />
                            <TextBlock VerticalAlignment="Center" Text="后同意" />
                        </StackPanel>
                    </CheckBox.Content>
                </CheckBox>
                <Button
                    Name="StartButton"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="StartButton_Click"
                    Content="登陆" />
                <StackPanel
                    Grid.Row="1"
                    Margin="0,26,0,26"
                    Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="其他方式" />
                    <StackPanel
                        Margin="0,13,0,26"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            x:Name="KcZipButton"
                            HorizontalAlignment="Center"
                            Click="KcZipButton_Click"
                            Content=".kczip" />
                        <Button
                            x:Name="KcWebButton"
                            Margin="16,0,16,0"
                            HorizontalAlignment="Center"
                            Content="网页" />
                        <Button
                            x:Name="KcTokenButton"
                            HorizontalAlignment="Center"
                            Content="Token" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
        <TeachingTip
            x:Name="Toast"
            Title="提示"
            CloseButtonContent="关闭"
            IsLightDismissEnabled="True"
            PlacementMargin="20"
            PreferredPlacement="Auto"
            Subtitle="And this is the subtitle" />
    </Grid>
</Page>